<section id='todos'>
  <header>
    <h2>Editing the list <em><%= @list[:name] %></em></h2>
    <ul>
      <li>
        <form action='/lists/<%= params[:list_id] %>/delete' method='post'>
          <button type='submit' class='delete'>Delete</button>
        </form>
      </li>
    </ul>
  </header>
</section>

<form action="/lists/<%= params[:list_id] %>" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter a new name for the following list:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="List Name" type="text" value="<%= @list[:name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= params[:list_id] %>">Cancel</a>
  </fieldset>
</form>
